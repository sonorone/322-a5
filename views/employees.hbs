<div class="row">
    <div class="col-md-12">
        <h2>Employees</h2>
        <hr />
        <table class="table table-responsive" style="color: black; background-color: rgba(255, 255, 255, 1);" >
            <thead class="h5">
                <tr>
                    <th class="col">Employee Num</th>
                    <th class="col">Full Name</th>
                    <th class="col">Email</th>
                    <th class="col">Address</th>
                    <th class="col">Manager ID </th>
                    <th class="col">Status</th>
                    <th class="col">Department</th>
                    <th class="col">Hired On</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr class="h6">
                    <td class="col">{{this.employeeNum}}</td>
                    <td class="col"><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                    <td class="col"><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                    <td class="col">{{this.addressStreet}} {{this.addresCity}} {{this.addressState}} {{this.addressPostal}}</td>
                    <td class="col"><a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}</a></td>
                    <td class="col"><a href="/employees?status={{this.status}}">{{this.status}}</a></td>
                    <td class="col"><a href="/employees?department={{this.department}}">{{this.department}}</a></td>
                    <td class="col">{{this.hireDate}}</td>
                </tr>
                {{/each}}
            </tbody>
            {{#unless promiseRejected}}
            <tfoot>
                <tr>
                    <td colspan='8' class="text-center">
                        <strong>{{this.message}}</strong>
                    </td>
                </tr>
            </tfoot>
        {{/unless}}
        </table>
    </div>
</div>